pipeline {
    agent { node { label 'Agent-1' } } 
    parameters {
        string(name: 'version', defaultValue: '1.0.1', description: 'hello')
    }
    stages {
        stage('Deploy') {
            steps {
                sh 'ls -ltr'
                echo "version from params: ${params.version}"
                //build job: "../catalogue-deploy", wait: true
                echo "Deploying"
                sh 'pwd'
        
            }
        } 
        stage('Init') {
            steps {
                sh """
                 pwd
                 cd terraform
                 terraform init -reconfigure -lock=false
                 """
            }
        }
        stage('plan') {
            steps {
                sh """
                 cd terraform
                 terraform plan
                 """
            }
        }
        stage('approve') {
            steps {
                sh """
                 cd terraform
                 terraform approve --auto-approve -lock=false
                 """
            }
        }
    }
    post{
        always{
            echo 'cleaning up workspace'
            deleteDir()
        }
    }
}

